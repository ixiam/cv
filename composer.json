{
    "name": "civicrm/cv",
    "description": "CLI tool for CiviCRM",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Otten",
            "email": "totten@civicrm.org"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "~2.8|^3",
        "symfony/process": "~2.8|^3",
        "symfony/filesystem": "~2.8|^3",
        "psy/psysh": "@stable",
        "civicrm/composer-downloads-plugin": "~2.1"
    },
    "autoload": {
        "psr-4": {
            "Civi\\Cv\\": "src/"
         }
    },
    "bin": [
        "bin/cv"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "downloads": {
            "box": {
                "url": "https://github.com/humbug/box/releases/download/3.8.3/box.phar",
                "path": "bin/box",
                "type": "phar"
            }
        }
    }
}
